<div class="mt-4">
  <h2>Cập nhật thông tin</h2>
  <form class="mt-4" method="POST" action="/users/{{user._id}}?_method=PUT" >
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" value="{{user.name}}">
  </div>
  <div class="form-group">
    <label for="name">Age</label>
    <input type="text" class="form-control" id="age" name="age" value="{{user.age}}">
  </div>
  <div class="form-group">
    <label for="name">Gender</label>
    <input type="text" class="form-control" id="gender" name="gender" value="{{user.gender}}">
  </div>
  <div class="form-group">
    <label for="name">Avatar</label>
    <input type="text" accept="image/*" class="form-control" id="avatar" name="avatar" value="{{user.avatar}}">
  </div>
 
  <button type="submit" class="btn btn-primary">Update User</button>
</form>
</div>